<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import com.jfoenix.*?>
<?import com.jfoenix.controls.*?>

<StackPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
	<BorderPane>
		<left>
			<ScrollPane BorderPane.alignment="CENTER">
				<content>
					<TableView fx:id="modelTableView">
						<columns>
						<TableColumn fx:id="idTableColumn" maxWidth="1.7976931348623157E308" minWidth="50.0" prefWidth="-1.0" text="%id" />
                     <TableColumn fx:id="degreeTableColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="-1.0" text="%staff.degree" />
							<TableColumn fx:id="firstNameTableColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="-1.0" text="%staff.firstName" />
							<TableColumn fx:id="lastNameTableColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="-1.0" text="%staff.lastName" />
						</columns>
					</TableView>
				</content>
				<opaqueInsets>
					<Insets />
				</opaqueInsets>
			</ScrollPane>
		</left>
		<center>
			<StackPane BorderPane.alignment="CENTER">
				<BorderPane.margin>
					<Insets left="50.0" />
				</BorderPane.margin>
				<children>
					<VBox>
						<children>
      							<GridPane fx:id="editGridPane">
      								<columnConstraints>
      									<ColumnConstraints halignment="LEFT" percentWidth="30.0" />
      									<ColumnConstraints maxWidth="-Infinity" percentWidth="70.0" />
      								</columnConstraints>
      								<rowConstraints>
      									<RowConstraints vgrow="SOMETIMES" />
      									<RowConstraints vgrow="SOMETIMES" />
                           <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      								</rowConstraints>
      								<children>
      									<Label fx:id="degreeLabel" styleClass="label-text-field" text="degree" />
      									<Label fx:id="firstNameLabel" styleClass="label-text-field" text="firstName" GridPane.rowIndex="1" />
      									<JFXTextField fx:id="degreeTextField" GridPane.columnIndex="1" />
      									<JFXTextField fx:id="firstNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                           <Label fx:id="lastNameLabel" styleClass="label-text-field" text="lastName" GridPane.rowIndex="2" />
                           <JFXTextField fx:id="lastNameTextField" prefColumnCount="1" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      								</children>
      							</GridPane>
                     <GridPane hgap="10.0">
                       <columnConstraints>
                           <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" />
                           <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
                           <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" />
                       </columnConstraints>
                       <rowConstraints>
                         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                       </rowConstraints>
                        <VBox.margin>
                           <Insets top="20.0" />
                        </VBox.margin>
                        <children>
      									<JFXButton fx:id="removeButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#removeModel" text="%button.remove" />
      									<JFXButton fx:id="editButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#editModel" text="%button.edit" GridPane.columnIndex="1" />
      									<JFXButton fx:id="addButton" alignment="CENTER" contentDisplay="RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#addModel" text="%button.add" GridPane.columnIndex="2" />
                        </children>
                     </GridPane>
						</children>
					</VBox>
				</children>
			</StackPane>
		</center>
		<top>
			<Label styleClass="label-title" text="%staff.edit.header" BorderPane.alignment="TOP_LEFT" />
		</top>
	</BorderPane>
</StackPane>
